def readProp;
script {
    node () {
        checkout scm
        readProp = readProperties(file: 'test.yml')
        readProp.firstname = "lak"

        writeContent = readContent.collect{"${it.key}=${it.value}"}.join('\n')
        writeFile file: 'test.yml', text: writeContent
    }
}


pipeline {
    agent any

    stages {
        stage('ymalfile') {
            steps {
                script {
                    echo """${readProp['firstname']}"""
                }
            }
        }
    }
}